
<%= form_for(@login) do |f| %>

<% if @login.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@login.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
    <% @login.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<div class='field'>
<%= f.label :first_name %>
<%= f.text_field :first_name %>
</div>

<div class='field'>
<%= f.label :last_name %>
<%= f.text_field :last_name %>
</div>

<div class='field'>
<%= f.label :username %>
<%= f.text_field :username %>
</div>

<div class='field'>
<%= f.label :password %>
<%= f.text_field :password, value: "" %>
</div>

<div class='field'>
<%= f.label :login_type %>
<%= f.select :login_type, [['Author',1],['User',2]]%>
</div>

<div class="actions">
  <%= f.submit %>
</div>


<% end %>

